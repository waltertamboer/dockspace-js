{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2015", "dom"],
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
    },
    "include": [
        "src/**/*",
    ]
}
